@startuml march_simple_algorithm
scale 1.5
skinparam {
    shadowing false
    linetype ortho
    defaultFontSize 10
    padding 1
}

skinparam activity {
    BackgroundColor #E8F5E9
    BorderColor #4CAF50
    FontSize 7
}

title Алгоритм March Simple

start
:Инициализация;

if (Размер > 0?) then (нет)
    stop
endif

:Шаг 1: Запись 0;
repeat
    :writeDirect(a, 0);
    :Обновить прогресс (0-25%);
repeat while (a < n-1?)

:Шаг 2: Чтение 0;
repeat
    :read(a);
    if (read == 0?) then (да)
        :passed = true;
    else (нет)
        :passed = false;
    endif
    :Сохранить результат;
    :Обновить прогресс (25-50%);
repeat while (a < n-1?)

:Шаг 3: Запись 1;
repeat
    :writeDirect(a, ~0);
    :Обновить прогресс (50-75%);
repeat while (a < n-1?)

:Шаг 4: Чтение 1;
repeat
    :read(a);
    if (read == ~0?) then (да)
        :passed = true;
    else (нет)
        :passed = false;
    endif
    :Сохранить результат;
    :Обновить прогресс (75-100%);
repeat while (a < n-1?)

:Отправить результаты;
stop

@enduml
