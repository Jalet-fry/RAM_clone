@startuml component_diagram
!theme plain

title Компонентная диаграмма проекта RAM_clone

package "Пользовательский интерфейс" {
    component [MainWindow] as UI
    component [TableItemDelegate] as Delegate
}

package "Бизнес-логика" {
    component [MemoryModel] as Model
    component [FaultInjector] as Injector
    component [MemoryTester] as Tester
}

package "Управление потоками" {
    component [TesterWorker] as Worker
    component [QThread] as Thread
}

package "Контроллеры" {
    component [FaultController] as FaultCtrl
    component [TestController] as TestCtrl
    component [ThemeController] as ThemeCtrl
}

package "Менеджеры отображения" {
    component [MemoryTableManager] as TableMgr
    component [StatisticsManager] as StatsMgr
    component [ResultsNavigator] as Nav
}

package "Вспомогательные компоненты" {
    component [Logger] as Log
    component [DataFormatter] as Formatter
    component [ThemeManager] as ThemeMgr
}

