@startuml algorithm_comparison
scale 1.5
skinparam {
    shadowing false
    linetype ortho
    defaultFontSize 10
    padding 1
}

title Сравнение алгоритмов

package "Walking 1s" #E8F5E9 {
    object WalkingOnes {
        Фазы: 2
        Операций: 2n
        Покрытие: Каждый бит
    }
}

package "Walking 0s" #E8F5E9 {
    object WalkingZeros {
        Фазы: 2
        Операций: 2n
        Покрытие: Каждый бит
    }
}

package "March Simple" #E8F5E9 {
    object MarchSimple {
        Фазы: 4
        Операций: 4n
        Покрытие: Все биты
    }
}

package "Обнаружение" #FFF3E0 {
    object Detection {
        StuckAt0/1: Все
        BitFlip: Walking (полное)\nMarch (частичное)
        OpenRead: Все
    }
}

WalkingOnes ..> Detection
WalkingZeros ..> Detection
MarchSimple ..> Detection

@enduml
